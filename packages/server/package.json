{
  "name": "list-server",
  "version": "0.1.0",
  "description": "List - Server",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "author": {
    "name": "Aleksander Fret",
    "email": "olekfret80@gmail.com",
    "url": "https://github.com/aleksanderfret/"
  },
  "homepage": "https://github.com/aleksanderfret/list#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/aleksanderfret/list"
  },
  "bugs": {
    "url": "https://github.com/aleksanderfret/list/issues"
  },
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "check": "npm-run-all lint format test compile",
    "compile": "tsc -p tsconfig.prod.json",
    "format": "prettier --check \"src/**/*.{js,ts}\"",
    "format:fix": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "eslint . --ext \".js,.ts\"",
    "lint:fix": "eslint ./ --ext \".js,.ts\" --max-warnings=0 --fix",
    "pre-commit": "lint-staged && npm run test",
    "pre-push": "npm-run-all check test",
    "start": "ts-node-dev --project ./tsconfig.json --respawn --transpileOnly ./src/index.ts",
    "test": "echo 'No tests Found!'"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1"
  },
  "devDependencies": {
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.6",
    "@types/express": "4.17.7",
    "@types/node": "14.0.26",
    "@typescript-eslint/eslint-plugin": "3.7.0",
    "@typescript-eslint/parser": "3.7.0",
    "eslint": "7.5.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "3.1.4",
    "lint-staged": "10.2.11",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.5",
    "ts-node-dev": "1.0.0-pre.56",
    "typescript": "3.9.7"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint -c .eslintrc --fix",
      "echo test"
    ]
  }
}
