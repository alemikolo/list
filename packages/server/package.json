{
  "name": "errand-list-server",
  "version": "0.1.0",
  "description": "Errand List - Server",
  "license": "MIT",
  "type": "module",
  "main": "src/index.ts",
  "author": {
    "name": "Aleksander Fret",
    "email": "olekfret80@gmail.com",
    "url": "https://github.com/aleksanderfret/"
  },
  "homepage": "https://github.com/aleksanderfret/errand-list#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/aleksanderfret/errand-list"
  },
  "bugs": {
    "url": "https://github.com/aleksanderfret/errand-list/issues"
  },
  "scripts": {
    "build": "tsc --build tsconfig.prod.json",
    "check": "npm-run-all lint format test compile",
    "compile": "tsc -p tsconfig.prod.json",
    "dev": "ts-node-dev --project ./tsconfig.json --watch --respawn --transpile-only ./src/index.ts",
    "format": "prettier --check \"src/**/*.{js,ts}\"",
    "format:fix": "prettier --write \"src/**/*.{js,ts}\"",
    "lint": "eslint . --ext \".js,.ts\"",
    "lint:fix": "eslint ./ --ext \".js,.ts\" --max-warnings=0 --fix",
    "pre-commit": "lint-staged && npm run test",
    "pre-push": "npm-run-all check test",
    "test": "echo 'No tests Found!'"
  },
  "dependencies": {
    "apollo-server-express": "2.17.0",
    "bcryptjs": "2.4.3",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "graphql": "15.3.0",
    "pg": "8.3.3",
    "reflect-metadata": "0.1.13",
    "type-graphql": "1.0.0",
    "typeorm": "0.2.26"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.2",
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.7",
    "@types/express": "4.17.8",
    "@types/graphql": "14.5.0",
    "@types/node": "14.10.2",
    "@typescript-eslint/eslint-plugin": "4.1.1",
    "@typescript-eslint/parser": "4.1.1",
    "eslint": "7.9.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-prettier": "3.1.4",
    "lint-staged": "10.4.0",
    "module-alias": "2.2.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.2",
    "ts-node-dev": "1.0.0-pre.62",
    "typescript": "4.0.2"
  },
  "_moduleAliases": {
    "@app": "src/app",
    "@db": "src/db",
    "@modules": "src/modules",
    "@shared": "src/shared"
  },
  "lint-staged": {
    "*.{ts,js,json,md}": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint -c .eslintrc --fix",
      "echo test"
    ]
  }
}
